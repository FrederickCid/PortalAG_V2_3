@inject IDialogService DialogService
@inject SfDialogService DialogServicesf
@{


    <MudCard Style="display:flex; flex-direction:column;border: 1px solid rgba(0,0,0,.3)">
        <MudItem Class="p-2 m-1" Style="display:flex; flex-direction:row; justify-content:space-between;">
            <MudText>@Cheque.NumeroSerie  <b>@Cheque.NroComprobante</b></MudText>
            <MudItem Style="display:flex ; flex-direction:column; text-align:center">
                <MudText><b>@(Cheque.IDCliente != null ? Cheque.IDCliente : "")</b></MudText>
                <MudText><b>@(Cheque.RazonSocial != null ? Cheque.RazonSocial : "")</b></MudText>
            </MudItem>
            <MudItem Class="p-2 m-1" Style="border: solid #B4D8E5 10px;border-radiu:25px;text-align:start; width:300px;">
                <MudText Style="top:-5px; font-weight:bold">$ @(Cheque.Monto != null ? Cheque.Monto.ToString("###,###,###,###") : "") </MudText>
            </MudItem>
        </MudItem>
        <MudItem Class="p-2 m-1" Style="text-align:end; align-self:end">
            <MudText Style="border-bottom: solid rgba(0,0,0,.3) 1px;width:400px; text-transform:capitalize">@dia De @mes De @anno</MudText>
        </MudItem>
        <MudItem Class="p-2 m-1">
            <MudText Style="font-weight:bold; bottom:-10px">PAGUESE A</MudText>
            <MudItem Style="display:flex ; flex-direction:row;border-bottom: solid rgba(0,0,0,.3) 1px; align-items: end">
                <MudText Style="font-weight:bold; ">LA ORDEN DE </MudText>
                <MudText Class="text-secondary" Style="margin-left:20px; font-size:20px; font-weight:bold"> Andes Industrial</MudText>
            </MudItem>
        </MudItem>

        <MudItem Class="p-2 m-1" Style="margin-bottom:20PX">
            <MudItem Style="display:flex ; flex-direction:row;border-bottom: solid rgba(0,0,0,.3) 1px; align-items: end">
                <MudText Style="font-weight:bold;">LA CANTIDAD DE </MudText>
                <MudText Class="text-secondary" Style="margin-left:20px; font-size:20px; font-weight:bold; text-transform:capitalize"> @Cheque.Monto.ToWords() Pesos</MudText>
            </MudItem>
        </MudItem>
        <MudCardActions Style="justify-content:space-between;">
            <MudText Style="margin-left:20px" Typo="Typo.h4">@Cheque.Banco</MudText>
            <MudItem Style="align-self:self-end">
                @if (Tipo == 1)
                {
                    <MudButton OnClick="Protestar" Style="margin-bottom:-20px; bottom:20px" Variant="Variant.Outlined">Protestar</MudButton>
                }
                @if (Tipo == 2)
                {
                    <MudButton OnClick="Prorroga" Style="margin-bottom:-20px; bottom:20px" Variant="Variant.Outlined">Prorroga</MudButton>
                }
                @if (Tipo == 3)
                {
                    <MudButton OnClick="Rescate" Style="margin-bottom:-20px; bottom:20px" Variant="Variant.Outlined">Rescate</MudButton>
                }
                @if (Tipo == 4)
                {
                    <MudButton OnClick="Deposito" Style="margin-bottom:-20px; bottom:20px" Variant="Variant.Outlined">Deposito</MudButton>
                }
            </MudItem>
        </MudCardActions>
    </MudCard>
}